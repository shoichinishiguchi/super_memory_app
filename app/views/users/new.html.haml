=render partial: 'shared/header', locals: {page_title: ""}
.middle
  .container
    .login-form-groups
      = form_with model: @user, local: true do |f|
        .form-group
          = f.label :name, '名前'
          = f.text_field :name, class: 'form-control login-form'
        .form-group
          = f.label :email, 'メールアドレス'
          = f.text_field :email, class: 'form-control login-form'
        .form-group
          = f.label :password, 'パスワード'
          = f.password_field :password, class: 'form-control login-form'
        .form-group
          = f.label :password_confirmation, 'パスワード (確認)'
          = f.password_field :password_confirmation, class: 'form-control login-form'
        = f.submit '登録', class: 'btn btn-primary login-btn'
