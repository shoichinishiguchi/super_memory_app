=render partial: 'shared/header', locals: {page_title: ""}
.middle
  .container
    .login-form-groups
      = form_with scope: :session, local: true do |f|
        .form-group
          = f.label :email, 'メールアドレス'
          = f.text_field :email, class: 'form-control login-form', id: 'session_emial', autocomplete:'off'
        .form-group
          = f.label :password, 'パスワード'
          = f.password_field :password, class: 'form-control login-form', id: 'session_password'
        = f.submit 'ログイン', class: 'btn btn-primary login-btn'
